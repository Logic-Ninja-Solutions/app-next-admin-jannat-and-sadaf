datasource db {
    provider = "mongodb"
    url      = env("MONGO_URI")
}

generator client {
    provider = "prisma-client-js"
}

model Product {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
