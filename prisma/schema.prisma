datasource db {
    provider = "mongodb"
    url      = env("MONGO_URI")
}

generator client {
    provider = "prisma-client-js"
}

type ProductVariant {
    size        String
    quantity    Int
    price       Int
    isAvailable Boolean
}

model Product {
    id          String           @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    slug        String           @unique
    code        String
    isAvailable Boolean
    images      String[]
    variants    ProductVariant[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
